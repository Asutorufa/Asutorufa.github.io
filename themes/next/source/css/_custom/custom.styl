// 修改选中字符的颜色
/* webkit, opera, IE9 */
::selection {
    background: #8cc4dc;
    color: #f7f7f7;
}
/* firefox */
::-moz-selection {
    background: #8cc4dc;
    color: #f7f7f7;
}

// 修改网站头部颜色
.site-meta {
    padding: 20px 0;
    color: #fff;
    background-color: rgba(255,0,0,0);
//     background: #8cc4dc;
}
.site-subtitle {
    margin-top: 10px;
    font-size: 13px;
    color: #000000;
}

.menu-item-active a,.menu .menu-item a:hover,.links-of-author .links-of-author-item a:hover{
    background-color: rgba(255,0,0,0.3);
    border-bottom-color: rgba(255,0,0,0);
}
.container{
    background-image:url('https://227anime.com/assets/img/top/img_main.jpg');
    background-position: center;
    background-repeat: no-repeat;
    background-size:cover;
    background-attachment:fixed;
}
.sidebar-inner,.sidebar,.header-inner{
    background-color: rgba(255,0,0,0);
}
.footer{
  position: relative;
}
// 修改按键（button）样式
.btn {
    color: #8cc4dc;
    background: #fff;
    border: 2px solid #8cc4dc;
}
// 按键（button）点击时样式
.btn:hover {
  border-color: #8cc4dc;
  color: #fff;
  background: #8cc4dc;
}


// 代码块 加圆角
.highlight { border-radius: 5px;}
pre { border-radius: 5px;}

